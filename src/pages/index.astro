---
// Astro Components
import { SEO } from "astro-seo";
import Layout from "../layouts/Layout.astro";
import Projects from "../components/Projects.astro";
import Container from "../components/Container.astro";
import MainButton from "../components/MainButton.astro";
import HeroBg from "../assets/bg-desktop.png";
import { Image } from "astro:assets";
---

<head>
  <SEO
    title="Victor Benazzi - Web Designer"
    description="Criação de Sites e landing pages que convertem."
    openGraph={{
      basic: {
        title: "Front-end Developer e Web Designer",
        type: "Website",
        image: "https://www.victorbenazzi.tech/Og-SEO.png",
      },
    }}
  />
</head>

<Layout>
  <Container>
    <section
      class="flex flex-col items-center justify-center gap-y-8 w-full h-[440px] mt-20 relative animate-BottomToTop">
      <Image class="absolute top-0 left-0 hidden" src={HeroBg} alt="bg" />
      <h1
        class="text-4xl lg:text-5xl x:text-8xl text-stone-50 font-bold text-center z-10">
        Web Designer & Front-end Developer
      </h1>
      <p class="text-stone-300 text-center w-full max-w-[680px] z-10">
        Sou web designer e front-end developer, especialista em criar sites e
        landing pages incríveis. Desenvolvo soluções web que aliam design,
        funcionalidade e responsividade.
      </p>
      <MainButton
        labelButton="Entre em contato"
        link="https://wa.me/5569992993889?text=Olá, vim pelo seu site e gostaria de saber mais sobre seus serviços!"
        target="_blank"
      />
    </section>
  </Container>

  <Projects />
</Layout>
