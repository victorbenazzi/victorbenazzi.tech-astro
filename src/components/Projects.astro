---
import PortfolioCard from "../components/PortfolioCard.astro";
import projetos from "../data/projects.json";
import Container from "./Container.astro";
---

<Container>
  <section
    class="flex flex-col items-center justify-center gap-y-20 mt-20 w-full">
    <div class="flex flex-col gap-y-4 w-full items-center">
      <h1 class="text-4xl text-stone-50 font-bold text-center">Projetos</h1>
      <p class="text-stone-300 w-full text-center text-base">
        Cada projeto Ã© como uma peÃ§a Ãºnica de desenvolvimento ðŸ§©
      </p>
    </div>

    <div class="grid grid-cols md:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-4">
      {
        projetos.map((projeto) => (
          <PortfolioCard
            key={projeto.id}
            title={projeto.title}
            stacks={projeto.stacks}
            description={projeto.description}
            imageCard={projeto.imageCard}
            alt={projeto.alt}
            link={projeto.link}
            linkText={projeto.linkText}
          />
        ))
      }
    </div>
  </section>
</Container>
