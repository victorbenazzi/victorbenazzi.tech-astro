---
import { Icon } from "astro-icon";
export interface Props {
  title: string;
  description: string;
  imageCard: string;
  link: string;
  linkText: string;
  alt: string;
  stacks: string;
  key?: number;
}

const { title, description, imageCard, link, linkText, alt, stacks, key } =
  Astro.props;
---

<div
  class="flex flex-col gap-y-4 max-h-[495px] p-4 justify-between border-stone-800 rounded-xl border">
  <img
    class="rounded-lg border border-stone-800 aspect-video hover:opacity-80"
    src={imageCard}
    alt={alt}
  />

  <div class="flex flex-col gap-y-2">
    <h3 class="text-stone-50 text-lg font-bold">{title}</h3>
    <p class="text-xs text-stone-500">{stacks}</p>
  </div>

  <p class="text-sm text-stone-200">{description}</p>

  <a
    href={link}
    target="_blank"
    class="flex flex-row items-center gap-x-2 text-sm w-fit text-stone-50 font-bold group mt-4">
    {linkText}
    <div class="w-4 h-4 group-hover:translate-x-1 transition-all">
      <Icon name="ph:caret-circle-right-bold" />
    </div>
  </a>
</div>
